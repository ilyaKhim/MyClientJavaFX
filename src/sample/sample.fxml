<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Style.css?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets><URL value="@/css/Style.css" /></stylesheets>

    <!--<ImageView><image><Image fx:id="img"></Image></image></ImageView>-->

    <TextArea fx:id="textArea"  editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
    <TextField fx:id="textField"  onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn" onAction="#sendMsg" text="Send" />
    </HBox>
</VBox>
